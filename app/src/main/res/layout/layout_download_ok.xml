<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_download_example"
                android:layout_width="140dp"
                android:layout_height="96dp"
                android:layout_margin="8dp"
                android:background="@drawable/download_example"
                />

            <TextView
                android:id="@+id/text_download_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="【植物大战僵尸】关于Last
Stand(谁笑到最后)的研究..."
                android:textSize="16sp"
                android:layout_toRightOf="@id/image_download_example"

                />

            <ImageView
                android:id="@+id/pinglun_download_example"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/text_download_example"
                android:layout_toRightOf="@id/image_download_example"
                android:background="@drawable/ic_textsms_grey600_24dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="4999"
                android:textColor="@color/black_alpha_45"
                android:textSize="14sp"
                android:layout_toRightOf="@id/pinglun_download_example"
                android:layout_below="@id/text_download_example"
                />

            <ImageView
                android:id="@+id/daxiao_download_example"
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:layout_below="@id/pinglun_download_example"
                android:layout_toRightOf="@id/image_download_example"
                android:background="@drawable/ic_inbox_grey600_24dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:text="17.5MB"
                android:textColor="@color/black_alpha_45"
                android:textSize="14sp"
                android:layout_toRightOf="@id/daxiao_download_example"
                android:layout_below="@id/text_download_example"
                />

            <ImageView
                android:id="@+id/xiangqing_download_example"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="88dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_exit_to_app_grey600_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginRight="8dp"
                android:text="详情"
                android:textColor="@color/black_alpha_45"
                android:textSize="16sp"
                android:layout_toLeftOf="@id/xiangqing_download_example"

                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>